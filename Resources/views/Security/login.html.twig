{# extends '::base.html.twig' #}
{% extends themes %}

{% block body %}

    <style type="text/css">
        h4 { padding: 0px; margin: 0px;}
        .alert { margin: 30px auto; width:60%; }
    </style>

    <form action="{{ path('login_check') }}" method="post" role="form">

        {% if error  %}
            <div class="alert alert-danger" role="alert">
                <p class="message">{{error.message}}</p>
            </div>
        {% endif %}

        <div class="login-container">
        <div class="login-header">
            <h4>Login</h4>
        </div>
        <div class="login-form">
            <h5 class="noteText">Welcome, Please login.</h5>

            <div class="form-group">
                <label for="exampleInputEmail1">Username</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" />
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Password</label>
                <input type="password" autocomplete="off" id="password" name="_password" class="form-control"/>
            </div>

            <div class="form-group">
                <label>
                    <input type="checkbox"> <span style="font-size:12px;">Remember me</span>
                </label>
            </div>
            <div class="form-group pull-right">
                <button class="btn btn-success" type="submit">Log In&nbsp;<i class="fa fa-chevron-circle-right"></i></button>
            </div>
            <div class="clearfix"></div>
            <hr>
            <p>
                <a href="{{path('account_forgetpassword')}}">
                FORGET YOUR PASSWORD?
                </a>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a href="{{path('account_register')}}" id="btn-register">SIGN UP</a>
            </p>
        </div>
    </div><!--@login-container-->
    </form>

{% endblock %}
