{% extends 'KamranTestBundle::Layout/page.html.twig' %}


{% block body %}

    <h3>Add Test</h3>

    <form class="form-horizontal" role="form" action="{{ path('test_add') }}" method="post" {{ form_enctype(form) }} >

        {{ form_widget(form._token) }}

        <div class="form-group">
            <label class="col-sm-2 control-label">Name:</label>
            <div class="col-sm-10">
                {{ form_widget(form.name) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Logo</label>
            <div class="col-sm-10">
                {{ form_widget(form.logofile) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Icon</label>
            <div class="col-sm-10">
                {{ form_widget(form.iconfile) }}
            </div>
        </div>


        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Create" />
        </div>
    </form>


    <script>
        $(function(){
            $('#person_form_logofile').fileUpload({
                showImage: true
            });

            $('#person_form_iconfile').fileUpload({});

        });
    </script>

{% endblock %}




