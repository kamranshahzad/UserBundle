{# extends '::base.html.twig' #}
{% extends themes %}


{% block body %}

    <style type="text/css">
        h4 { padding: 0px; margin: 0px;}
        .alert { margin: 30px auto; width:60%; }
    </style>

    <form action="{{ path('account_forgetpassword') }}" method="post" role="form">
    <div class="login-container">
        <div class="login-header">
            <h4>Directory Login</h4>
        </div>
        <div class="login-form">
            <h5 class="noteText">Reset your password</h5>

            {{ form_widget(form._token) }}

            <div class="form-group">
                <label for="exampleInputEmail1">Username/Email</label>
                {{ form_widget(form.username) }}
            </div>

            <div class="form-group pull-right">
                <button class="btn btn-success" type="submit">Reset Password&nbsp;<i class="fa fa-chevron-circle-right"></i></button>
            </div>
            <div class="clearfix"></div>
            <hr>
            <p>
                <a href="{{path('login')}}">
                    LOGIN
                </a>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a href="{{path('account_register')}}" id="btn-register">SIGN UP</a>
            </p>
        </div>
    </div><!--@login-container-->
    </form>

{% endblock %}
