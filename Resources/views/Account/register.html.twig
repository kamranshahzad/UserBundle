{# extends '::base.html.twig' #}
{% extends themes %}

{% block body %}

    <form action="{{ path('account_register') }}" method="post" role="form">
    <div class="signup-container">
        <div class="login-header">
            <h4>Directory Sign Up</h4>
        </div>
        {{ form_widget(form._token) }}

        <div class="signup-form">
            <h5 class="noteText">Free sign-up for directory</h5>
            <div class="form-group">
                <label for="exampleInputEmail1">First Name</label>
                {{ form_widget(form.firstname) }}
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Last Name</label>
                {{ form_widget(form.lastname) }}
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
                {{ form_widget(form.email) }}
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1"></label>
                {{ form_widget(form.isindividual) }}
            </div>

            <div class="form-group" id="organizationField">
                <label for="exampleInputEmail1">Organization</label>
                {{ form_widget(form.organization) }}
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Username</label>
                {{ form_widget(form.username) }}
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Password</label>
                {{ form_widget(form.password.first) }}
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Confirm Password</label>
                {{ form_widget(form.password.second) }}
            </div>

            <div class="form-group pull-right">
                <button class="btn btn-success" type="submit">Sign up&nbsp;<i class="fa fa-chevron-circle-right"></i></button>
            </div>
            <div class="clearfix"></div>


        </div><!--@login-form-->

    </div><!--@signup-container-->
    </form>


{% endblock %}
